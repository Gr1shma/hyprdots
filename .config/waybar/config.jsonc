{
    "position": "top",
    "height": 32,
    "modules-left": [
        "hyprland/workspaces"
    ],
    "modules-center": [
        "clock"
    ],
    "modules-right": [
        "pulseaudio",
        "backlight",
        "cpu",
        "memory",
        "battery",
        "network",
        "tray"
    ],
    "tray": {
        "spacing": 10
    },
    "clock": {
        "interval": 1,
        "timezone": "Asia/Kathmandu",
        "format": " {:%a %d %b   %I:%M %p}",
        "tooltip": false
    },
    "cpu": {
        "format": " {usage}%",
        "tooltip": false
    },
    "memory": {
        "format": " {}%"
    },
    "battery": {
        "bat": "BAT1",
        "states": {
            "good": 95,
            "warning": 30,
            "critical": 15
        },
        "format": "{icon} {capacity}%",
        "format-charging": "{icon} {capacity}%",
        "format-plugged": "{icon} {capacity}%",
        "format-alt": "{time}",
        "format-icons": [
            "",
            "",
            "",
            "",
            ""
        ],
        "tooltip": false
    },
    "network": {
        "format-wifi": " {essid}",
        "format-ethernet": " ",
        "format-linked": " {ifname} (No IP)",
        "format-disconnected": " ",
        "tooltip": false
    },
    "pulseaudio": {
        "format": " {volume}%",
        "on-click": "foot -T pulsemixer zsh -ic pulsemixer",
        "scroll-step": 5
    },
    "backlight": {
        "device": "intel_backlight",
        "format": " {icon} ",
        "format-icons": [
            "󰃞",
            "󰃟",
            "󰃠"
        ],
        "on-scroll-up": "brightnessctl set 5%+",
        "on-scroll-down": "brightnessctl set 5%-",
        "tooltip": false
    }
}
