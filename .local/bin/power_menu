#!/usr/bin/env bash

op=$(echo -e " Poweroff\n Reboot\n Lock\n Logout" | rofi -dmenu -i | awk '{print tolower($2)}')

case $op in 
    poweroff)
        systemctl poweroff
        ;;
    reboot)
        systemctl reboot
        ;;
    lock)
        sh -c '(sleep 0.5s; hyprlock)' & disown
        ;;
    logout)
        hyprctl dispatch exit
        ;;
esac
